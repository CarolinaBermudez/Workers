<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Login" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:fontFamily">@font/nunito_bold</item>

        <item name="colorPrimary">@color/black_700</item> <!-- purple_500 -->
        <item name="colorPrimaryVariant">@color/black_500</item> <!-- purple_700 -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amarillo_700</item> <!-- @color/teal_200 -->
        <item name="colorSecondaryVariant">@color/amarillo_200</item> <!-- @color/teal_700 -->
        <item name="colorOnSecondary">@color/black_700</item> <!-- @color/black -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Login.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Login.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Login.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>